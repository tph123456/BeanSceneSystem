@model IEnumerable<BeanSceneSystem.Models.Table>

@{
    ViewData["Title"] = "Index";
}

<h1>Tables</h1>
@if (User.IsInRole("Admin"))
{
    <p>
        <a asp-action="Create">Create New</a>
    </p>
}
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.TableName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TableStatus)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Area)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.TableName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TableStatus)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Area.AreaName)
            </td>

                @if (User.IsInRole("Admin"))
                {
                    <td>
                        <a asp-action="Edit" asp-route-id="@item.TableID">Edit</a> |
                        <a asp-action="Details" asp-route-id="@item.TableID">Details</a> |
                        <a asp-action="Delete" asp-route-id="@item.TableID">Delete</a>
                    </td>
                }
            </tr>
}
    </tbody>
</table>
