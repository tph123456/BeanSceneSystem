@model BeanSceneSystem.Models.StaffPermission

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>StaffPermission</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
