@model IEnumerable<BeanSceneSystem.Models.Schedule>

@{
    ViewData["Title"] = "Index";
}

<h1>Schedules</h1>
@if (User.IsInRole("Admin"))
{
    <p>
        <a asp-action="Create">Create New</a>
    </p>
}
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.SType)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.StartDateTime)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.EndDateTime)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.SCapacity)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Status)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.SType)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.StartDateTime)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.EndDateTime)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.SCapacity)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Status)
            </td>
                @if (User.IsInRole("Admin"))
                {
            <td>
                <a asp-action="Edit" asp-route-id="@item.SittingID">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.SittingID">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.SittingID">Delete</a>
            </td>
                }
        </tr>
}
    </tbody>
</table>
